<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vinay.smarthomes">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity android:name=".MainActivity">
        </activity>

        <activity android:name=".RoomsActivity">
        </activity>

        <activity android:name=".BathroomActivity">
        </activity>

        <activity android:name=".BedroomActivity">
        </activity>

        <activity android:name=".DiningroomActivity">
        </activity>

        <activity android:name=".GuestroomActivity">
        </activity>

        <activity android:name=".HallActivity">
        </activity>

        <activity android:name=".KitchenActivity">
        </activity>

        <activity android:name=".FanControlActivity">
        </activity>

    </application>

</manifest>